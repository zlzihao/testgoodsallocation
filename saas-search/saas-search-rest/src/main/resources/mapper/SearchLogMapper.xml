    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="cn.nome.saas.search.repository.entity.SearchLogDO" id="BaseResultMap">
        <id property="id" column="id"/>
        <result property="corpId" column="corp_id"/>
        <result property="appId" column="app_id"/>
        <result property="userId" column="user_id"/>
        <result property="inputWord" column="input_word"/>
        <result property="splitWord" column="split_word"/>
        <result property="source" column="source"/>
        <result property="ip" column="ip"/>
        <result property="totalCount" column="total_count"/>
        <result property="curPage" column="cur_page"/>
        <result property="pageSize" column="page_size"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    <sql id="Base_Column_List">
		id, corp_id, app_id, user_id, input_word, split_word, source, ip, total_count, cur_page, page_size, created_at, updated_at
	</sql>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from search_log
        where id = #{id}
    </select>

    <delete id="deleteByPrimaryKey">
	    delete from search_log
		where id = #{id}
	</delete>

    <insert id="insertSelective" useGeneratedKeys="true" keyProperty="id"
            parameterType="cn.nome.saas.search.repository.entity.SearchLogDO">
        insert into search_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="corpId != null">
                corp_id,
            </if>
            <if test="appId != null">
                app_id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="inputWord != null">
                input_word,
            </if>
            <if test="splitWord != null">
                split_word,
            </if>
            <if test="source != null">
                source,
            </if>
            <if test="ip != null">
                ip,
            </if>
            <if test="totalCount != null">
                total_count,
            </if>
            <if test="curPage != null">
                cur_page,
            </if>
            <if test="pageSize != null">
                page_size,
            </if>
            <if test="createdAt != null">
                created_at,
            </if>
            <if test="updatedAt != null">
                updated_at,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="corpId != null">
                #{corpId},
            </if>
            <if test="appId != null">
