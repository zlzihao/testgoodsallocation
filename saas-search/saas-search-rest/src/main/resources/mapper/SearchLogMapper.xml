            <if test="userId != null">
                #{userId},
            </if>
            <if test="inputWord != null">
                #{inputWord},
            </if>
            <if test="splitWord != null">
                #{splitWord},
            </if>
            <if test="source != null">
                #{source},
            </if>
            <if test="ip != null">
                #{ip},
            </if>
            <if test="totalCount != null">
                #{totalCount},
            </if>
            <if test="curPage != null">
                #{curPage},
            </if>
            <if test="pageSize != null">
                #{pageSize},
            </if>
            <if test="createdAt != null">
                #{createdAt},
            </if>
            <if test="updatedAt != null">
                #{updatedAt},
            </if>
        </trim>
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="cn.nome.saas.search.repository.entity.SearchLogDO">
        update search_log
        <set>
            <if test="corpId != null">
                corp_id = #{corpId},
            </if>
            <if test="appId != null">
                app_id = #{appId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="inputWord != null">
                input_word = #{inputWord},
            </if>
            <if test="splitWord != null">
                split_word = #{splitWord},
            </if>
            <if test="source != null">
                source = #{source},
            </if>
            <if test="ip != null">
                ip = #{ip},
            </if>
            <if test="totalCount != null">
                total_count = #{totalCount},
            </if>
            <if test="curPage != null">
                cur_page = #{curPage},
            </if>
            <if test="pageSize != null">
                page_size = #{pageSize},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="updatedAt != null">
                updated_at = #{updatedAt},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="getLogBeforeDays" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from search_log
        where
        <![CDATA[date(created_at) >= ]]> DATE_SUB(CURDATE(), INTERVAL #{beforeDays} DAY)
    </select>

